
<h1 class="pad users">Have a look! </h1>


<div class="well col-xs-8 col-xs-offset-2">



  <h4 class="center"><strong>Description</strong></h4>
  <hr>

  <%= simple_format(@page.description) %>
    <div class="article-actions">
      <% if logged_in? && (current_user == @page.user || current_user.admin?) %>

              <%= link_to "Edit", edit_page_path(@page), class: "btn btn-xs btn-primary" %>
               <%= link_to "delete", page_path(@page), :method => :delete, :data => {confirm: "Are you sure?"},class: "btn btn-xs btn-danger" %>
           </div>
           <% end %>
</div>

</div>


<%= render 'partials/footer' %>
