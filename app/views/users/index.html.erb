<h1>Users</h1>

</br>
 <div align=center>
  <div align="center">
    <%= will_paginate %>
  </div>

   <% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">

        <li class="article-title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li><small><%= pluralize(user.pages.count,"page") if user.pages %></small></li>

        <li><%= link_to "Delete this user", user_path(user), method: :delete,
                data: { confirm: "Are you sure you eant to delete user and their pages?"} %></li>

      </div>

    </div>

  </ul>
  <% end %>
  <%= will_paginate %>
</div>



<%= link_to 'New User', new_user_path %>
